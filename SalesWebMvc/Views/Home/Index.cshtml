@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center mt-5">
    <h1 class="display-4">Welcome to SalesWebMvc</h1>
    <p class="lead">A simple web application built with ASP.NET Core MVC.</p>

    <a class="btn btn-primary btn-lg" asp-controller="Sellers" asp-action="Index">
        Manage Sellers
    </a>
    <a class="btn btn-success btn-lg" asp-controller="Departments" asp-action="Index">
        View Departments
    </a>

    <hr class="my-4">

    <div class="row">
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title">Sellers</h5>
                    <p class="card-text">Manage your team of sellers with ease.</p>
                    <a asp-controller="Sellers" asp-action="Index" class="btn btn-warning">Go to Sellers</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title">Departments</h5>
                    <p class="card-text">Keep track of different departments in your company.</p>
                    <a asp-controller="Departments" asp-action="Index" class="btn btn-info">View Departments</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title">About</h5>
                    <p class="card-text">Learn more about this project and its purpose.</p>
                    <a asp-controller="Home" asp-action="About" class="btn btn-dark">About the Project</a>
                </div>
            </div>
        </div>
    </div>
</div>
