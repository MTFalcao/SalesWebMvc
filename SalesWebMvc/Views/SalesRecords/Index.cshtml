@{
    ViewData["Title"] = "Sales Record";
}

<div class="container mt-4">
    <h1 class="text-center">@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form class="form-horizontal p-4 border rounded shadow-sm bg-light" asp-action="SimpleSearch">
                <fieldset>
                    <legend class="text-primary">Simple Search</legend>
                    <div class="mb-3">
                        <label for="minDate" class="form-label fw-bold">Min Date</label>
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label for="maxDate" class="form-label fw-bold">Max Date</label>
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-md-8">
            <form class="form-horizontal p-4 border rounded shadow-sm bg-light" asp-action="GroupingSearch">
                <fieldset>
                    <legend class="text-primary">Grouping Search</legend>
                    <div class="mb-3">
                        <label for="minDate" class="form-label fw-bold">Min Date</label>
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label for="maxDate" class="form-label fw-bold">Max Date</label>
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
