@model SalesWebMvc.Models.Seller;

@{
	ViewData["Title"] = "Delete Seller";
}

<div class="container mt-4">
	<h2 class="text-center text-success">@ViewData["Title"]</h2>
	<h3 class="text-center text-danger">Are you sure you want to delete this seller?</h3>

	<div class="row justify-content-center">
		<div class="col-md-6">
			<div class="border rounded shadow-sm bg-light p-4">
				<h4 class="text-info">Seller Information</h4>
				<hr />

				<dl class="row">
					<dt class="col-sm-4 fw-bold text-end">Name:</dt>
					<dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

					<dt class="col-sm-4 fw-bold text-end">Email:</dt>
					<dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

					<dt class="col-sm-4 fw-bold text-end">Birth Date:</dt>
					<dd class="col-sm-8">@Html.DisplayFor(model => model.BirthDate)</dd>

					<dt class="col-sm-4 fw-bold text-end">Base Salary:</dt>
					<dd class="col-sm-8">@Html.DisplayFor(model => model.BaseSalary)</dd>
				</dl>

				<form asp-action="Delete">
					<input type="hidden" asp-for="Id" />
					<div class="d-flex justify-content-between mt-3">
						<button type="submit" class="btn btn-danger">Delete</button>
						<a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
