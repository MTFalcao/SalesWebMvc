@model SalesWebMvc.Models.ViewModels.SellerFormViewModel;
@{
	ViewData["Title"] = "Edit Seller";
}

<div class="container mt-4">
	<h2 class="text-center text-primary">@ViewData["Title"]</h2>

	<div class="row justify-content-center">
		<div class="col-md-6">
			<div class="border rounded shadow-sm bg-light p-4">
				<h4 class="text-info">Seller Information</h4>
				<hr />

				<form asp-action="Edit">
					<input type="hidden" asp-for="Seller.Id" />

					<div class="mb-3">
						<label asp-for="Seller.Name" class="form-label fw-bold">Name</label>
						<input asp-for="Seller.Name" class="form-control" placeholder="Enter full name" />
						<span asp-validation-for="Seller.Name" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<label asp-for="Seller.Email" class="form-label fw-bold">Email</label>
						<input asp-for="Seller.Email" type="email" class="form-control" placeholder="example@email.com" />
						<span asp-validation-for="Seller.Email" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<label asp-for="Seller.BirthDate" class="form-label fw-bold">Birth Date</label>
						<input asp-for="Seller.BirthDate" type="date" class="form-control" />
						<span asp-validation-for="Seller.BirthDate" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<label asp-for="Seller.BaseSalary" class="form-label fw-bold">Base Salary</label>
						<input asp-for="Seller.BaseSalary" type="number" step="0.01" class="form-control" placeholder="Enter salary amount" />
						<span asp-validation-for="Seller.BaseSalary" class="text-danger"></span>
					</div>

					<div class="mb-3">
						<label asp-for="Seller.DepartmentId" class="form-label fw-bold">Department</label>
						<select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))" class="form-select">
							<option value="">Select a Department</option>
						</select>
					</div>

					<div class="d-flex justify-content-between mt-3">
						<a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
						<button type="submit" class="btn btn-primary">Save</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
