@model SalesWebMvc.Models.Department

@{
    ViewData["Title"] = "Department Details";
}

<div class="container mt-4">
    <h1 class="text-center text-primary">@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="border rounded shadow-sm bg-light p-4">
                <h4 class="text-info">Department Information</h4>
                <hr />

                <dl class="row">
                    <dt class="col-sm-4 fw-bold text-end">
                        @Html.DisplayNameFor(model => model.Name):
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                </dl>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-outline-secondary">Back to List</a>
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
                </div>
            </div>
        </div>
    </div>
</div>
